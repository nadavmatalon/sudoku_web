<!DOCTYPE html>
<html>
    <head>
        <title>Sudoku-Web</title>
        <meta http-equiv='Content-Type' content='text/html; charset=UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <link type='text/css' rel='stylesheet' href='./css/reset.css' />  
        <link type='text/css' rel='stylesheet' href='./css/style.css' />
        <link type='text/css' rel='stylesheet' href='./css/switchery.css' />  
        <link type='text/css' rel='stylesheet' href='./css/powerange.css' />
        <link type='text/css' rel='stylesheet' href='./css/jquery-ui-1.11.2-min.css' />
        <link type='text/css' rel='stylesheet' href='https://fonts.googleapis.com/css?family=Sniglet' />
        <script type='text/javascript' src='./javascript/jquery-2.1.1-min.js' ></script>
        <script type='text/javascript' src='./javascript/jquery-ui-1.11.2-min.js' ></script>
        <script type='text/javascript' src='./javascript/powerange.js' ></script>
    </head>
    <body>
        <div id='main-container'>
            <div id='page-title-container'>
                <p id='page-title'>Sudoku</p>
            </div>
            <div class='controls-container-closed' id='controls-container'>
                <div id='check-solution-pane'>
                    <input type='submit' id='check-solution-pane-close' value='x'>
                    <div id='check-solution-pane-text'></div>
                </div>
                <div id="controls-title">Controls</div>
                <button class='controls-pane-button' id='controls-open-pane-button'></button>  
                <div id='controls-button-container'>
                    <button type='button' class='controls-button' id='controls-new-puzzle'>New Puzzle</button>
                    <button type='button' class='controls-button' id='controls-reset-puzzle'>Reset Puzzle</button>
                    <button type='button' class='controls-button' id='controls-check-solution'>Check Solution</button>
                    <div id='solution-buttons-container'>
                        <input type='radio' id='solution-hide-button' value='0' checked='checked'><label for='solution-hide-button'>Hide Solution</label>
                        <input type='radio' id='solution-show-button' value='1' ><label for='solution-show-button'>Show Solution</label>
                    </div>
                    <div id='difficulty-level-container'>
                        <div id='difficulty-level-textbox'>
                            <span>Level of Difficulty: </span>
                            <span id="difficulty-level-display">Very Easy</span>
                        </div>
                        <div id='difficulty-level-slider-container'>
                            <input type='text' id='slider' />
                        </div>
                    </div>
                    <div id='loader-container'>
                        <img src='/images/loader-icon.gif' alt='loader-image' >
                    </div>
                    <button class='controls-pane-button' id='controls-close-pane-button'></button>
                </div>
            </div>
            <div id='grid-outer-container'>
                <div id='grid-inner-container'>
                    <% @counter = 0 %>
                    <%for column in 'A'..'I' %>
                        <%for row in 0..8 %>
                            <div class='square'>
                                <input type='text' class='square-input' id=<%= @counter.to_s %> value=<%= '' %> >
                            </div>
                            <% if ((@counter+1) % 3 == 0) and ((@counter+1) % 9 != 0)%>
                                <div class='separator' id='vertical-separator'>|</div>
                            <% end %>
                            <% @counter += 1 %>
                        <% end %><br/>
                        <% if (column == 'C') || (column == 'F') %>
                            <div class='separator' id='horizontal-separator'>-</div>
                        <% end %>
                    <% end %>
                </div>
            </div>
            <div id='bottom-separator'></div>
        </div>
    </body>
    <script type='text/javascript' src='./javascript/sudoku_web.js' ></script>
</html>

