<div class='slider-container'>

    <div class='slider-text'>
        <span>Level of Difficulty: </span>
    </div>

    <div class='display-box-container'>
        <div id="display-box">Very Easy</div>
    </div>

    <div class="slider-box">
        <input type="text" class="slider" value=1 />
    </div>

</div>

<div class='solution-control-container' id="mode">
     <input type="radio" id="radio6" name="mode" value='0' checked="checked"><label for="radio6">Hide solution</label>
     <input type="radio" id="radio7" name="mode" value='1'><label for="radio7">Show solution</label>
</div>
<div class='container'>
<div class='main-container'>
    <% @counter = 0 %>
    <%for i in 'A'..'I' %>
        <%for j in 0..8 %>
            <div class='square'>
                <input class='square-input' type='text' id=<%= @counter.to_s %> value=<%= '' %> >
            </div>
            <% if ((@counter+1) % 3 == 0) && ((@counter+1) % 9 != 0)%>
                <div class='vertical-seperator'>|</div>
            <% end %>
            <% @counter += 1 %>
        <% end %><br/>
        <% if (i == 'C') || (i == 'F') %>
                <div class='horizontal-seperator'>-</div>
        <% end %>
    <% end %>
</div>
</div>
<div class='bottom-seperator'>
</div>



